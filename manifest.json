{
  "manifest_version": 3,
  "name": "SmartTab Toolkit",
  "version": "1.0.0",
  "description": "Remember why you opened each tab. Quick notes per tab with modern UI.",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "SmartTab Toolkit - Why did you open this tab?"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "128": "icons/icon.png"
  }
}
